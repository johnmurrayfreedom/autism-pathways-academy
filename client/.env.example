# API Configuration
REACT_APP_API_URL=http://localhost:8000/api/v1
REACT_APP_WS_URL=ws://localhost:8000/ws

# Feature Flags
REACT_APP_ENABLE_AI_TUTOR=true
REACT_APP_ENABLE_ACCESSIBILITY_FEATURES=true

# Development Settings
REACT_APP_DEBUG_MODE=false
CHOKIDAR_USEPOLLING=true
WDS_SOCKET_PORT=0

# Authentication
REACT_APP_AUTH_STORAGE_KEY=autism_pathways_auth
REACT_APP_TOKEN_EXPIRY_BUFFER_MS=300000  # 5 minutes in milliseconds

# Accessibility Defaults
REACT_APP_DEFAULT_FONT_SIZE=16
REACT_APP_DEFAULT_CONTRAST=normal  # normal, high, highest
REACT_APP_DEFAULT_ANIMATIONS=minimal  # none, minimal, full

# AI Tutor Settings
REACT_APP_AI_TUTOR_DEFAULT_STYLE=direct  # direct, detailed, visual
REACT_APP_AI_TUTOR_RESPONSE_TIMEOUT_MS=30000  # 30 seconds 